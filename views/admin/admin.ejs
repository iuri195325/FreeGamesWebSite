<%- include('../partials/header.ejs'); %>
<body style=" background-color: #DCDCDC">
    <%- include('../partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h2>Jogos</h2>
        <a class="btn btn-success" href="/game/new">Adicionar novos jogos</a>
        <a class="btn btn-success" href="/home">Pagina inicial</a> 
        <hr>
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>ações</th>
            </tr>
            <% game.forEach(game =>{ %>
                <tr>    
                    <th><%= game.id %></th>
                    <th><%= game.name %></th>
                    <th> 
                        <a class="btn btn-warning" href="/admin/edit/<%= game.id %>">Editar</a> 
                        <form method="POST" action="/admin/category/delete" style="display: inline">
                            <input type="hidden" name="id" value="<%= game.id %>">
                            <button class="btn btn-danger">Excluir</button>          
                        </form>    
                    </th>
                </tr>
            <% }) %>
        </table>
    </div>
</body>
<%- include ('../partials/footer.ejs'); %>